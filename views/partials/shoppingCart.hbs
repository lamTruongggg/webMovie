<link rel="stylesheet" href="../style/cart.css" />
<div class="body" style="margin-top: 60px; margin-bottom:30px;">
<div class="card" style="margin-top: 12%; margin-bottom:12%;">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col">
                        <h4><b>Shopping Cart</b></h4>
                    </div>
                    <div class="col align-self-center text-right text-muted">{{numbers}} items</div>
                </div>
            </div>
            {{#each carts}}
            <form method="post" action="/Movies/shoppingCart/delete" >
            <div class="row border-top border-bottom">
                <div class="row main align-items-center">
                    <div class="col-2"><img class="img-fluid" src="{{this.image}}"></div>
                    <div class="col">
                        <div class="row text-muted">{{this.fullName}}</div>
                        <div class="row">SEAT: {{this.seat}} - HELL: {{this.hell}}</div>
                    </div>
                    <input name="seat" value="{{this.seat}}" type="hidden">
                    <input name="hell" value="{{this.hell}}" type="hidden">
                    <input name="fullName" value="{{this.idshowing}}" type="hidden">
                    <div class="col"> <a href="#">-</a><a href="#" class="border">1</a><a href="#">+</a> </div>
                   <input  value="{{this.price}}" name="price" type="hidden"> 
                    <div class="col">&dollar; {{this.price}} <span class="close">  <button style="width: 60px; height:50px;  background-color:#242333; color:white; margin-left:20px;margin-bottom:12px; border-radius: 5px;" >X</button></span></div>
                </div>
            </div>
            </form>
            {{/each}}
            <div class="back-to-shop"><a href="/">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
        </div>
        <div class="col-md-4 summary" style="margin-top:6%;">
            <div>
                <h5><b>Summary</b></h5> 
            </div>
            <hr>
            <div class="row">

                <button style="width: 120px; height:50px;  background-color:#242333; color:white;margin-bottom:12px; border-radius: 5px;"  onclick="findTotal()">RESET</button>
                <div class="col" style="padding-left:10px;"> {{numbers}} ITEMS</div>
                <div class="col text-right "> </div>
            </div>
             <form>         
                <p>GIVE CODE</p> <input id="code" placeholder="Enter your code">
            </form>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">TOTAL PRICE</div>
                <div class="col text-right" style="display: flex;">&dollar; <h3 name="total" id="total"></h3></div>              
            </div> 
            <form method="post" action="/Movies/checkpin">
              <input  name="totalMoney" id="totalMoney"/>
            <input type="submit" class="btnn">CHECKOUT</input>
            </form>
        </div>
    </div>
</div>
</div>

    <script type="text/javascript">
function findTotal(){
    var arr = document.getElementsByName('price');
    var tot=0;
    for(var i=0;i<arr.length;i++){
        if(parseInt(arr[i].value))
            tot += parseInt(arr[i].value);
    }
    document.getElementById('totalMoney').value = tot;
     document.getElementById('total').innerHTML = tot;
}

    </script>