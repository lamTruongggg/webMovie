
<link rel="stylesheet" href="../style/table.css" />
<div style="margin-top: 120px;">
    <div style="display: flex;">    &nbsp;&nbsp;&nbsp;&nbsp;   
   <a href="/Movies/Add" class="btnn" >ADD</a>   &nbsp;&nbsp;&nbsp;&nbsp;   
    <h3> <b>VIEW LIST OF INFOR MOVIE</b></h3>  &nbsp;&nbsp;&nbsp;&nbsp;     &nbsp;&nbsp;&nbsp;&nbsp;   
     <a href="/Movies/showingMovie" class="btnn" >SHOWING</a> 
    </div>
<table class="styled-table">
<thead>
<tr>
    <th>NAME MOVIE</th>
    <th>DESCRIPTION</th>
    <th>TIMING</th>
    <th>COUNTRY</th>
    <th>GENRE</th>
    <th>IMAGE</th>
    <th>VIDEO</th>
    <th>RATED</th>
    <th>DATECREATED</th>    
    <th>ACTIVE</th>
    <th>ACTION</th>
</tr>
</thead>
<tbody>
{{#each movies}}
<tr >
    <td >{{this.fullName}}</td>
    <td class="pass">{{this.description}}</td>
    <td class="pass">{{this.timing}}</td>
    <td class="pass">{{this.country}}</td>
    <td>{{this.genre}}</td>
    <td class="pass">{{this.image}}</td>
    <td class="pass">{{this.video}}</td>
    <td >{{this.rated}}</td>
    <td>{{this.dateCreate}}</td>
    <td>{{this.isActive}}</td>
    <td ><a  class="btnn" href="/Movies/edit/{{this._id}}" >EDIT</a>
     &nbsp;&nbsp;&nbsp;&nbsp; 
    <a href="/Movies/delete/{{this._id}}" onclick="return ConfirmDelete()"  class="btnn">DELETE</a>
    </td>
</tr>
{{/each}}
</tbody>
</table>
</div>
<script>
    function ConfirmDelete()
            {
              var x = confirm("Are you sure you want to delete?");
              if (x)
                  return true;
              else
                return false;
            }
</script>